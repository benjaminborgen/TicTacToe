<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Board">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="0"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOne"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btnZero"
            android:layout_toEndOf="@+id/btnZero"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="1"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btnOne"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/btnOne"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="2"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/btnZero"
            android:layout_below="@+id/btnZero"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="3"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btnThree"
            android:layout_toEndOf="@+id/btnZero"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="4"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btnOne"
            android:layout_toEndOf="@+id/btnOne"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="5"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/btnThree"
            android:layout_below="@+id/btnThree"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="6"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btnFour"
            android:layout_toEndOf="@+id/btnThree"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="7"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btnFive"
            android:layout_toEndOf="@+id/btnFour"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="casual"
            android:onClick="clickOn"
            android:tag="8"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />


    </RelativeLayout>

</FrameLayout>